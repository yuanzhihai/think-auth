{
    "name": "yzh52521/think-auth",
    "license": "Apache-2.0",
    "type": "think-extend",
    "description": "The Auth Library For ThinkPHP6",
    "authors": [
        {
            "name": "yzh52521",
            "email": "396751927@qq.com"
        }
    ],
    "require": {
        "php": ">=8.0.2",
        "topthink/framework": ">=6.0"
    },
    "require-dev": {
        "yzh52521/think-notification": "^1.0",
        "yzh52521/think-mailer": "^2.0"
    },
    "suggest": {
        "yzh52521/think-notification": "Required to send notification.",
        "yzh52521/think-mailer": "Required to send email."
    },
    "autoload": {
        "psr-4": {
            "yzh52521\\": "src"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "extra": {
        "think": {
            "services": [
                "yzh52521\\auth\\Service"
            ],
            "config": {
                "auth": "src/config.php"
            }
        }
    }
}
